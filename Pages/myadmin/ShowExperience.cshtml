@page
@model project.Pages.myadmin.ShowExperienceModel
@{

}

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
     <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Job Title</th>
      <th scope="col">Location</th>
      <th scope="col">Start year</th>
      <th scope="col">End year</th>
      <th scope="col">Description</th>
      <th scope="col" colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var item in Model.experience)
    {
    <tr>
      <th scope="row">@item.Id</th>
      <td>@item.Jobtitle</td>
      <td>@item.Location</td>
      <td>@item.Startyear</td>
      <td>@item.Endyear</td>
      <td>@item.Desc</td>
      <td>
        <a class="btn btn-primary" asp-page="UpdateExperience"asp-route-id="@item.Id"> Update</a>
      </td>
      <td>
        <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id"> Delete</a>
      </td>
    </tr>
    }
    
  </tbody>
</table>
    </div>
  </div>
</div>


